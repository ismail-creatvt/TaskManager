<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddTaskActivity"
    android:gravity="center">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/task_title_input"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/task_title_input_field"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Task Title"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_below="@id/task_title_input"
        android:id="@+id/pick_date"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Select Date"
        android:background="@color/colorAccent"
        android:textSize="@dimen/text_size_large"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"/>


    <Button
        android:layout_below="@id/pick_date"
        android:id="@+id/pick_time"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Select Time"
        android:background="@color/colorAccent"
        android:textSize="@dimen/text_size_large"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:id="@+id/btn_panel"
        android:layout_below="@id/pick_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/task_cancel"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_marginRight="10dp"
            android:background="@color/red"/>

        <Button
            android:id="@+id/task_add"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@color/colorPrimary"
            android:text="Add Task" />
    </LinearLayout>

</RelativeLayout>